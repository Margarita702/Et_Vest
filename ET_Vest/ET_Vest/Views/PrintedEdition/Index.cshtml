@model IEnumerable<ET_Vest.Models.PrintedEdition>

<h2>PrintedEditions List</h2>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Cathegory</th>
            <th>Periodicity</th>
            <th>DeliveredUnitPrice</th>
            <th>SalePrice</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var printedEdition in Model)
        {
            <tr>
                <td>@printedEdition.Title</td>
                <td>@printedEdition.Cathegory</td>
                <td>@printedEdition.Periodicity</td>
                <td>@printedEdition.DeliveredUnitPrice</td>
                <td>@printedEdition.SalePrice</td>

                <td>
                    <a asp-action="Edit" asp-route-id="@printedEdition.Id"
                       class="btn btn-primary">Edit</a>
                    <form asp-action="Delete" asp-route-id="@printedEdition.Id" method="post"
                          onsubmit="return confirm('Are you sure you want to delete this edition?');">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Add" asp-controller="PrintedEdition" class="btn btn-success">
    Add New Edition
</a>