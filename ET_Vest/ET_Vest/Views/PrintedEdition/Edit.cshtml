@model ET_Vest.Models.PrintedEdition


<h2>Edit Edition</h2>
<form method="post" asp-controller="PrintedEdition" asp-action="Edit">
    <div class="form-group">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Cathegory" class="form-label"></label>
        <input asp-for="Cathegory" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Periodicity" class="form-label"></label>
        <input asp-for="Periodicity" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="DeliveredUnitPrice" class="form-label"></label>
        <input asp-for="DeliveredUnitPrice" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="SalePrice" class="form-label"></label>
        <input asp-for="SalePrice" type="date" class="form-control" />
    </div>

    <input type="submit" value="Update" class="btn btn-primary" asp-controller="PrintedEdition" />
</form>