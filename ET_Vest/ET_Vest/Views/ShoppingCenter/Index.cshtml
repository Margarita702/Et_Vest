@model IEnumerable<ET_Vest.Models.ShoppingCenter>

<h2>Shopping Centers List</h2>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th>City</th>
            <th>Staff</th>

@*             @if (User.IsInRole("Admin"))
            {
                <th>Actions</th>
            } *@
        </tr>
    </thead>
    <tbody>
        @foreach (var place in Model)
        {
            <tr>
                <td>@place.Name</td>
                <td>@place.Address</td>
                <td>@place.City</td>
                <td>@place.Staff</td>
               @*  @if (User.IsInRole("Admin"))
                { *@
                    <td>
                        <a asp-action="Edit" asp-route-id="@place.Id"
                           class="btn btn-primary">Edit</a>
                        <form asp-action="Delete" asp-route-id="@place.Id" method="post"
                              onsubmit="return confirm('Are you sure you want to delete this shopping center?');">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                @* } *@
            </tr>
        }
    </tbody>
</table>
